<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to: <%= Senior.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/seniors/<%= Senior._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment text">
                </div>
                <div class="form-group">
                     <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/seniors">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>